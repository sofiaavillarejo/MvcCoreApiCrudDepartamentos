@model IEnumerable<MvcCoreApiCrudDepartamentos.Models.Departamento>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-controller="Departamentos" asp-action="Create">Crear nuevo dpto</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IdDepartamento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Localidad)
			</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdDepartamento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Localidad)
				</td>
				<td>
					<a asp-controller="Departamentos" asp-action="Details" asp-route-id="@item.IdDepartamento">Detalles</a>
					<a asp-controller="Departamentos" asp-action="Edit" asp-route-id="@item.IdDepartamento">Editar</a>
					<a asp-controller="Departamentos" asp-action="Delete" asp-route-id="@item.IdDepartamento">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
